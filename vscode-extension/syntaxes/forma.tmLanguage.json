{
  "name": "Forma",
  "scopeName": "source.forma",
  "fileTypes": ["forma", "fml"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#types" },
    { "include": "#declarations" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.forma",
          "match": "//.*$"
        },
        {
          "name": "comment.block.forma",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.forma",
          "match": "\\b(if|else|when|for|while|return|break|continue)\\b"
        },
        {
          "name": "keyword.declaration.forma",
          "match": "\\b(class|property|event|method|enum|import|export)\\b"
        },
        {
          "name": "keyword.other.forma",
          "match": "\\b(preview|value)\\b"
        },
        {
          "name": "constant.language.forma",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.forma",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.forma",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        },
        {
          "name": "string.quoted.single.forma",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.forma",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.forma",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.forma",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.hex.forma",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.forma",
          "match": "\\b(int|float|bool|string|void)\\b"
        },
        {
          "name": "entity.name.type.forma",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "entity.name.function.forma",
          "match": "\\b(method)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.forma" },
            "2": { "name": "entity.name.function.forma" }
          }
        },
        {
          "name": "entity.name.class.forma",
          "match": "\\b(class)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.forma" },
            "2": { "name": "entity.name.class.forma" }
          }
        },
        {
          "name": "variable.other.property.forma",
          "match": "\\b(property)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.forma" },
            "2": { "name": "variable.other.property.forma" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.forma",
          "match": "\\+|\\-|\\*|\\/|%"
        },
        {
          "name": "keyword.operator.comparison.forma",
          "match": "==|!=|<|>|<=|>="
        },
        {
          "name": "keyword.operator.logical.forma",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.forma",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.forma",
          "match": "=>"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.forma",
          "match": "[,;]"
        },
        {
          "name": "punctuation.section.braces.forma",
          "match": "[{}]"
        },
        {
          "name": "punctuation.section.brackets.forma",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.section.parens.forma",
          "match": "[()]"
        },
        {
          "name": "punctuation.accessor.forma",
          "match": "\\."
        },
        {
          "name": "punctuation.definition.typeparameters.forma",
          "match": ":"
        }
      ]
    }
  }
}
